{% extends 'layout/layout.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body %}
<h1>Gestion des plats</h1>
<h2>Liste des plats</h2>
<div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr><th>Renommer</th><th>Titre</th><th>Description</th><th>Prix</th><th>Recette</th></tr>
        </thead>
        <tbody>
            {% for item in list %}
            <tr>
                <td class="text-center col-xs-1"><a href="/product/edit/{{ item.id }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                <td class="col-xs-3">{{ item.title }}</td>
                <td class="col-xs-4">{{ item.description }}</td>
                <td class="col-xs-2">{{ item.price }}</td>
                <td class="text-center col-xs-2"><a href="/recipe/edit/{{ item.id }}">Recette <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<h2>Ajouter un plat</h2>
<div>
    {{ form_start(form) }}  
    <div class="col-xs-3">
        {{ form_label(form.title) }}    
        {{ form_widget(form.title)}}
    </div>
    <div class="col-xs-4">
        {{ form_label(form.description) }}        
        {{ form_widget(form.description)}}
    </div>
    <div class="col-xs-2">
        {{ form_label(form.price) }}
        {{ form_widget(form.price)}}
    </div>
    <div class="col-xs-3">
        <br>
        {{ form_widget(form.save,{'attr': {'class': 'btn btn-success'}} )}}
    </div>
    
    {{ form_end(form) }}
    
</div>
{% endblock %}